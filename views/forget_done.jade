extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Forget Password
					div.signup-wall
						form(class='form-signin', action='/forget', method='POST')
							
							| &nbsp;Please check your email.
							a(href='/', class='text-center new-account') Sign In
							span.clearfix
							
					#message
						if message
							h1.text-center.error-message #{message}
					